{
  "name": "@petaboo/api",
  "description": "ぺたぼー API - メモ・タスク管理システム バックエンド (PETABoo)",
  "type": "module",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250904.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "tsx": "^4.20.3",
    "wrangler": "^4.34.0"
  },
  "scripts": {
    "dev": "wrangler dev --port 7594 --log-level warn 2>&1 | tee ../../api.log",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migration:local": "drizzle-kit push --config drizzle.config.local.ts",
    "db:migration:prod": "drizzle-kit push",
    "db:studio:local": "drizzle-kit studio --port 8795 --config drizzle.config.local.ts",
    "db:studio:prpd": "drizzle-kit studio --port 8796",
    "db:reset:local": "rm -rf .wrangler && rm -rf ../../.wrangler"
  },
  "dependencies": {
    "@hono/auth-js": "^1.0.15",
    "@hono/clerk-auth": "^2.0.0",
    "@hono/node-server": "1.14.4",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "hono": "4.8.3",
    "resend": "^4.0.0",
    "zod": "^3.25.67"
  }
}
